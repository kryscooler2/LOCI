<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="1">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.21"
        android:background="@color/white"/>

    <AutoCompleteTextView
        android:id="@+id/departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="departure station"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimaryDark" />

    <AutoCompleteTextView
        android:id="@+id/arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="arrival station"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimaryDark" />


    <Button
        android:id="@+id/btnHome"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/button_home"
        android:drawableLeft="@mipmap/home"
        android:background="@color/white"
        android:layout_marginBottom="6dp"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/btnWork"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/button_work"
        android:drawableLeft="@mipmap/work"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@android:drawable/progress_horizontal"
        android:fontFamily="casual"
        android:text="Search"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btncall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0.08"
        android:background="@color/service"
        android:fontFamily="casual"
        android:text="Call LOCI Service."
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</LinearLayout>