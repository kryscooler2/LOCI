<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnGoogleMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/france" />

            <AutoCompleteTextView
                android:id="@+id/departure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="departure station"
                android:inputType="textPersonName"
                android:textColorLink="@color/colorPrimaryDark" />

            <AutoCompleteTextView
                android:id="@+id/arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="arrival station"
                android:inputType="textPersonName"
                android:textColorLink="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>

                <Button
                    android:id="@+id/btnHome"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@mipmap/home"
                    android:text="@string/button_home"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnWork"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@mipmap/work"
                    android:text="@string/button_work"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>

                <Button
                    android:id="@+id/configHome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:drawable/ic_menu_manage"
                    android:textAllCaps="false"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"/>
                <Button
                    android:id="@+id/configWork"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@android:drawable/ic_menu_manage"
                    android:textAllCaps="false"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
            </LinearLayout>

            <!--<Button
                    android:id="@+id/btnHome"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:background="@color/white"
                    android:drawableLeft="@mipmap/home"
                    android:text="@string/button_home"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnWork"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:drawableLeft="@mipmap/work"
                    android:text="@string/button_work"
                    android:textSize="12sp" />-->

            <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@android:drawable/progress_horizontal"
                android:fontFamily="casual"
                android:text="Search"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btncall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="0.08"
                android:background="@color/service"
                android:fontFamily="casual"
                android:text="Call LOCI Service."
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>